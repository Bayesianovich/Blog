
/* Category Grid Page */
.category-search-container
  max-width: 500px
  margin: 0 auto 50px auto
  position: relative

.category-search-icon
  position: absolute
  left: 20px
  top: 50%
  transform: translateY(-50%)
  color: var(--text-meta)
  font-size: 18px

.category-search-input
  width: 100%
  padding: 15px 20px 15px 50px
  border: 2px solid var(--border-color)
  border-radius: 50px
  background: var(--bg-card)
  color: var(--text-main)
  font-size: 16px
  outline: none
  transition: all 0.3s
  box-sizing: border-box
  
  &:focus
    border-color: var(--accent-color)
    box-shadow: 0 0 0 4px rgba(76, 175, 80, 0.1)

.category-grid
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr))
  gap: 24px
  margin-top: 40px

.category-card
  background: var(--bg-card)
  border-radius: 16px
  padding: 30px 20px
  transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1)
  border: 1px solid var(--border-color)
  display: flex
  flex-direction: column
  align-items: center
  text-align: center
  position: relative
  overflow: hidden
  
  &:hover
    transform: translateY(-8px)
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08)
    border-color: var(--accent-color)
    
    .category-card-icon
      transform: scale(1.1) rotate(5deg)
      color: var(--accent-color)

.category-card-link
  display: flex
  flex-direction: column
  align-items: center
  text-decoration: none
  width: 100%
  color: var(--text-main)

.category-card-icon
  font-size: 42px
  margin-bottom: 20px
  color: var(--text-meta)
  transition: all 0.3s ease

.category-card-title
  font-size: 20px
  font-weight: 700
  margin: 0 0 10px 0
  color: var(--text-title)
  line-height: 1.3

.category-card-count
  font-size: 13px
  color: var(--text-meta)
  background: var(--bg-body)
  padding: 5px 12px
  border-radius: 20px
  display: inline-block
  margin-bottom: 15px

.category-card-children
  margin-top: 20px
  padding-top: 20px
  border-top: 1px solid var(--border-color)
  width: 100%
  display: flex
  flex-wrap: wrap
  justify-content: center
  gap: 8px

.child-category-tag
  font-size: 13px
  color: var(--text-meta)
  background: var(--bg-body)
  padding: 6px 12px
  border-radius: 8px
  transition: all 0.2s
  display: flex
  align-items: center
  gap: 6px
  border: 1px solid transparent
  text-decoration: none
  
  &:hover
    background: var(--accent-color)
    color: #fff
    transform: translateY(-2px)
    text-decoration: none
    
    .child-count
       color: rgba(255,255,255,0.9)

.child-count
  font-size: 11px
  color: var(--text-meta)
  opacity: 0.7

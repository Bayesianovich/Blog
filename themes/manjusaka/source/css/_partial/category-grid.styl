
/* Category Grid Page */
.category-grid
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(160px, 1fr))
  gap: 12px
  margin-top: 20px

.category-card
  background: var(--bg-body)
  border-radius: 8px
  padding: 15px 10px
  transition: all 0.3s
  border: 1px solid var(--border-color)
  display: flex
  flex-direction: column
  align-items: center
  text-align: center
  
  &:hover
    transform: translateY(-3px)
    box-shadow: var(--shadow)
    border-color: var(--accent-color)
    .category-card-icon
      transform: scale(1.1)

.category-card-link
  display: block
  width: 100%
  text-decoration: none
  color: var(--text-main)
  display: flex
  flex-direction: column
  align-items: center

.category-card-icon
  font-size: 24px
  margin-bottom: 8px
  color: var(--accent-color)
  transition: transform 0.3s
  
.category-card-title
  font-size: 14px
  font-weight: bold
  margin: 0 0 5px 0
  color: var(--text-title)
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
  max-width: 100%

.category-card-count
  font-size: 11px
  color: var(--text-meta)
  background: rgba(0,0,0,0.05)
  padding: 1px 6px
  border-radius: 10px

.category-card-children
  margin-top: 10px
  padding-top: 10px
  border-top: 1px dashed var(--border-color)
  width: 100%
  display: flex
  flex-wrap: wrap
  justify-content: center
  gap: 4px

.child-category-tag
  font-size: 10px
  color: var(--text-meta)
  background: var(--bg-card)
  padding: 2px 6px
  border-radius: 3px
  border: 1px solid var(--border-color)
  transition: all 0.2s
  display: flex
  align-items: center
  gap: 3px
  
  &:hover
    background: var(--accent-color)
    color: #fff
    border-color: var(--accent-color)
    text-decoration: none
    .child-count
      background: rgba(255,255,255,0.3)
      color: #fff

.child-count
  background: rgba(0,0,0,0.05)
  padding: 0 3px
  border-radius: 2px
  font-size: 9px
  min-width: 12px
  text-align: center
  transition: all 0.2s

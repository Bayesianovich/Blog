<% if (post.photos && post.photos.length){ %>
  <img src="<%= post.photos[0] %>" class="thumbnail" alt="<%= post.title %>">
<% } else { %>
  <% 
    var str = post.slug || post.path || post.title || 'default';
    var hash = 0;
    for (var i = 0; i < str.length; i++) {
        var chr = str.charCodeAt(i);
        hash = ((hash << 5) - hash) + chr;
        hash |= 0; // Convert to 32bit integer
    }
    var seed = Math.abs(hash);
    var placeholderUrl = 'https://picsum.photos/seed/' + seed + '/800/600';
  %>
  <img src="<%= placeholderUrl %>" class="thumbnail" alt="<%= post.title %>">
<% } %>
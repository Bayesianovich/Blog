<article class="post-detail">
  <div class="post-content">
    <% if (page.type === "categories") { %>
      <h1 class="article-title" style="text-align: center; margin-bottom: 20px;"><%= page.title %></h1>
      
      <!-- Category Search Box -->
      <div class="category-search-container">
        <i class="fas fa-search category-search-icon"></i>
        <input type="text" id="category-search" class="category-search-input" placeholder="Filter categories...">
      </div>


      <div class="category-grid" id="category-grid">
        <% site.categories.each(function(cat){ %>
          <% if (!cat.parent) { %>
            <div class="category-card" data-name="<%= cat.name.toLowerCase() %>">
              <a href="<%- url_for(cat.path) %>" class="category-card-link">
                <div class="category-card-icon">
                  <% if (theme.category_icons && theme.category_icons[cat.name]) { %>
                    <i class="<%= theme.category_icons[cat.name] %>"></i>
                  <% } else { %>
                    <i class="fas fa-folder"></i>
                  <% } %>
                </div>
                <div class="category-card-content">
                  <h3 class="category-card-title"><%= cat.name %></h3>
                  <span class="category-card-count"><%= cat.posts.length %> articles</span>
                </div>
              </a>
              
              <% 
                // Find children
                var children = site.categories.filter(function(child){
                  return child.parent === cat._id;
                });
                
                // Filter children logic
                var validChildren = children.filter(function(child){
                   // Special rule for Weekly: hide years (numeric)
                   if (cat.name === 'Weekly' && /^\d+$/.test(child.name)) return false;
                   return true;
                });
              %>
              
              <% if (validChildren.length > 0) { %>
                <div class="category-card-children">
                  <% validChildren.forEach(function(child){ %>
                    <a href="<%- url_for(child.path) %>" class="child-category-tag">
                      <%= child.name %> <span class="child-count"><%= child.posts.length %></span>
                    </a>
                  <% }) %>
                </div>
              <% } %>
            </div>
          <% } %>
        <% }) %>
      </div>
      
      <div id="no-category-found" style="display: none; text-align: center; color: var(--text-meta); padding: 40px;">
        <i class="fas fa-inbox" style="font-size: 48px; margin-bottom: 15px; opacity: 0.5;"></i>
        <p>No categories found matching your search.</p>
      </div>

      <script>
        document.addEventListener('DOMContentLoaded', function() {
          var searchInput = document.getElementById('category-search');
          var cards = document.querySelectorAll('.category-card');
          var noResult = document.getElementById('no-category-found');
          
          searchInput.addEventListener('input', function(e) {
            var term = e.target.value.toLowerCase().trim();
            var visibleCount = 0;
            
            cards.forEach(function(card) {
              var name = card.getAttribute('data-name');
              // Also search in children names if possible, but simplified to main category for now
              if (name.includes(term)) {
                card.style.display = 'flex';
                visibleCount++;
              } else {
                card.style.display = 'none';
              }
            });
            
            if (visibleCount === 0) {
              noResult.style.display = 'block';
            } else {
              noResult.style.display = 'none';
            }
          });

        });
      </script>
    <% } else if (page.type === "tags") { %>
      <h1 class="article-title"><%= page.title %></h1>
      <div class="tag-cloud">
        <%- tagcloud({
          min_font: 16, 
          max_font: 28, 
          amount: 200, 
          color: true, 
          start_color: '#a4d8fa', 
          end_color: '#0790e8'
        }) %>
      </div>
    <% } else if (page.type === "contribution") { %>
      <div class="contribution-page">
        <div class="contribution-header">
          <div class="contribution-banner" style="background-image: url('https://wsrv.nl/?url=raw.githubusercontent.com/huangshoucheng/picBed/master/marek-piwnicki-PPoWdNggYu8-unsplash.jpg');">
            <div class="contribution-banner-overlay"></div>
            <div class="contribution-title-box">
              <h1>Contribution</h1>
              <p>"Talk is cheap. Show me the code." â€” Linus Torvalds</p>
            </div>
          </div>
        </div>
        
        <div class="contribution-container">
          <div class="contribution-section">
            <h2 class="section-title"><i class="fab fa-github"></i> GitHub Activity</h2>
            <div class="contribution-chart-large">
              <img src="https://ghchart.rshah.org/4caf50/Bayesianovich" alt="Bayesianovich's Github chart" />
            </div>
            <div class="contribution-stats">
               <p>Explore my open source journey and daily coding habits.</p>
            </div>
          </div>
          
          <div class="contribution-section">
            <h2 class="section-title"><i class="fas fa-clock"></i> Weekly Coding Habits</h2>
            <div class="contribution-chart-large">
              <!-- Pointing to the 'assets' branch for the image -->
              <img src="https://raw.githubusercontent.com/Bayesianovich/Blog/assets/wakatime.svg" alt="WakaTime Stats" onerror="this.src='https://via.placeholder.com/800x200?text=Stats+Generating+(Wait+for+Action)...';" />
            </div>
            <div class="contribution-stats">
            </div>
          </div>
        </div>
      </div>
    <% } else { %>
      <%- page.content %>
    <% } %>
  </div>
  
  <% if (page.comments) { %>
  <div class="post-footer">
    <div id="comments" style="margin-top: 50px;"></div>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        var theme = localStorage.getItem('theme') === 'light' ? 'light' : 'dark_dimmed';
        var script = document.createElement('script');
        script.src = "https://giscus.app/client.js";
        script.setAttribute("data-repo", "Bayesianovich/Blog_comment");
        script.setAttribute("data-repo-id", "R_kgDOQ8Miig");
        script.setAttribute("data-category", "Announcements");
        script.setAttribute("data-category-id", "DIC_kwDOQ8Miis4C1G63");
        script.setAttribute("data-mapping", "pathname");
        script.setAttribute("data-strict", "0");
        script.setAttribute("data-reactions-enabled", "1");
        script.setAttribute("data-emit-metadata", "0");
        script.setAttribute("data-input-position", "bottom");
        script.setAttribute("data-theme", theme);
        script.setAttribute("data-lang", "zh-CN");
        script.setAttribute("crossorigin", "anonymous");
        script.async = true;
        document.getElementById('comments').appendChild(script);
      });
    </script>
  </div>
  <% } %>
</article>
